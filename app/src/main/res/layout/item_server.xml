<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@color/gray_transparent">

    <ImageView
        android:id="@+id/icon_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/gray_transparent"/>

    <TextView
        android:id="@+id/motd_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minLines="2"
        android:maxLines="2"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/icon_image_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ping_image_view"
        app:layout_constraintVertical_bias="0.7"
        android:layout_margin="8dp"/>

    <ImageView
        android:id="@+id/ping_image_view"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="7dp"/>

    <ImageView
        android:id="@+id/type_image_view"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/ping_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="7dp"/>

    <ImageView
        android:id="@+id/remove_image_view"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/type_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="7dp"/>

    <TextView
        android:id="@+id/custom_name_text_view"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/icon_image_view"
        app:layout_constraintTop_toTopOf="@id/ping_image_view"
        app:layout_constraintBottom_toBottomOf="@id/ping_image_view"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/players_text_view"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ping_image_view"
        app:layout_constraintEnd_toStartOf="@id/ping_image_view"
        app:layout_constraintBottom_toBottomOf="@id/ping_image_view"
        android:layout_margin="8dp"/>

</android.support.constraint.ConstraintLayout>