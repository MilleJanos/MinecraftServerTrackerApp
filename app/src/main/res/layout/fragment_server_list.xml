<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ServerListFragment">

    <ImageView
        android:id="@+id/background_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/mc_background_background"
        android:scaleType="centerCrop"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp"
        android:textColor="@color/white"
        android:text="Server List"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:minHeight="20dp"/>

    <ImageView
        android:id="@+id/list_background_layer_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/title_text_view"
        app:layout_constraintBottom_toTopOf="@id/add_button_text_view"
    android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/dark_gray_transparent"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/server_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/title_text_view"
        app:layout_constraintBottom_toTopOf="@id/add_button_text_view"
        android:layout_margin="16dp"/>



    <Button
        android:id="@+id/add_button_text_view"
        android:layout_width="150dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        android:text="Add server"
        android:textAllCaps="false"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:tint="@color/black"
        android:background="@mipmap/ic_button_background"
        android:adjustViewBounds="true"/>

</android.support.constraint.ConstraintLayout>